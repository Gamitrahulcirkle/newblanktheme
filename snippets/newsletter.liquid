<div class="footer__newslatter">
  {%- if title != blank -%}
    <h6>{{- title -}}</h6>
  {%- endif -%}
  {%- form 'customer', class: 'newsletter-form' -%}
    <input
      id="NewsletterForm--{{ section.id }}"
      type="email"
      name="contact[email]"
      class="input-control"
      value="{{ form.email }}"
      aria-required="true"
      autocorrect="off"
      autocapitalize="off"
      autocomplete="email"
      {% if form.errors %}
        autofocus
        aria-invalid="true"
        aria-describedby="Newsletter-error--{{ section.id }}"
      {% elsif form.posted_successfully? %}
        aria-describedby="Newsletter-success--{{ section.id }}"
      {% endif %}
      placeholder="{{ 'layout.newsletter.label' | t }}"
      required
    >
    <button
      type="submit"
      class="site-btn"
      name="commit"
      id="Subscribe"
      aria-label="{{ 'layout.newsletter.button_label' | t }}"
    >
      {{- 'layout.newsletter.button_label' | t -}}
    </button>
    {{- form.errors | default_errors | replace: '<li', '<li class="error-message"' -}}
    {%- if form.posted_successfully? -%}
      <p
        class="newsletter-form__message success-message"
        id="Newsletter-success--{{ section.id }}"
        tabindex="-1"
        autofocus
      >
        {{- 'layout.newsletter.success' | t -}}
      </p>
    {%- endif -%}
  {%- endform -%}
  {%- if show_social_icons -%}
    {%- render 'social-icons' -%}
  {%- endif -%}
</div>
